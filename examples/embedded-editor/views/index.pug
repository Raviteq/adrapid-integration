      h4 Exported banners files
      p#exported-banners
    script.
      // receive banners
      // https://developer.mozilla.org/en-US/docs/Web/API/Window/postMessage
      window.addEventListener('message', receiveMessage, false);

      const container = document.getElementById('exported-banners');
      function receiveMessage(event) {
        const banner = event.data.banner;
        Object.keys(banner.files).forEach(key => {
          Object.keys(banner.files[key]).forEach(bannerType => {
            const url = banner.files[key][bannerType];
            container.innerHTML += `<label>${key} ${url}`;
          });
        })
        container.append();
      };